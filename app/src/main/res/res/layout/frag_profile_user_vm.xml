                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"

                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Email"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:background="#0C1C24"
                        android:layout_marginLeft="@dimen/_10sdp"

                        android:padding="@dimen/_5sdp"    android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"

                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Phone No"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:background="#0C1C24"
                        android:layout_marginLeft="@dimen/_10sdp"

                        android:padding="@dimen/_5sdp"      android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"

                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="City"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <EditText
                        android:id="@+id/et_city"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#0C1C24"
                        android:layout_marginLeft="@dimen/_10sdp"

                        android:padding="@dimen/_5sdp"      android:layout_weight=".6"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:orientation="horizontal"

                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="PostCode"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <EditText
                        android:id="@+id/et_pincode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#0C1C24"
                        android:layout_marginLeft="@dimen/_10sdp"

                        android:padding="@dimen/_5sdp"        android:layout_weight=".6"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"

                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Country"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/tv_country_int"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_country"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:background="@drawable/shape_chat_msg"
                        android:text="Select Country"

                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"

                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Website"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <EditText
                        android:id="@+id/et_website"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#0C1C24"
                        android:layout_marginLeft="@dimen/_10sdp"

                        android:padding="@dimen/_5sdp"     android:layout_weight=".6"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"

                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Description"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <EditText
                        android:id="@+id/et_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:background="#0C1C24"
                        android:layout_marginLeft="@dimen/_10sdp"

                        android:padding="@dimen/_5sdp"      android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="#FC7C44"
                    android:padding="@dimen/_10sdp"
                    android:text="Save"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_16sdp" />

            </LinearLayout>

        </RelativeLayout>


    </ScrollView>

</RelativeLayout>