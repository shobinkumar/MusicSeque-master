<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B171F">

    <include
        android:id="@+id/toolbar"
        layout="@layout/top_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_15sdp">

                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/profile2" />

                <!--<TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_profile"
                    android:text="Zander"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_18sdp" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text1"
                    android:layout_toRightOf="@+id/img_profile"
                    android:text="Zander"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text2"
                    android:layout_toRightOf="@+id/img_profile"
                    android:text="Zander"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_15sdp" />-->

            </RelativeLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rel1"
                android:background="#BDBDBD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Display Name"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <EditText
                        android:id="@+id/et_display_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight=".6"
                        android:background="#0C1C24"

                        android:padding="@dimen/_5sdp"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"

                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Email"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight=".6"
                        android:background="#0C1C24"

                        android:padding="@dimen/_5sdp"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"

                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Phone"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight=".6"
                        android:background="#0C1C24"

                        android:padding="@dimen/_5sdp"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"

                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Postcode"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <EditText
                        android:id="@+id/et_postcode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight=".6"
                        android:background="#0C1C24"

                        android:padding="@dimen/_5sdp"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"

                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="City"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <EditText
                        android:id="@+id/et_city"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight=".6"
                        android:background="#0C1C24"

                        android:padding="@dimen/_5sdp"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Country"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/tv_country_int"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_country"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:background="@drawable/shape_chat_msg"
                        android:text="Select Country"

                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Bio"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <EditText
                        android:id="@+id/et_bio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight=".6"
                        android:background="#0C1C24"

                        android:padding="@dimen/_5sdp"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Expience"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <EditText
                        android:id="@+id/et_experience"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight=".6"
                        android:background="#0C1C24"

                        android:padding="@dimen/_5sdp"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Website"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <EditText
                        android:id="@+id/et_website"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight=".6"
                        android:background="#0C1C24"

                        android:padding="@dimen/_5sdp"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Genre"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/txt_genere_int"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_chat_msg"
                        android:text="0"
                        android:textColor="#ffffff"

                        android:textColorHint="#ffffff"
                        android:textSize="@dimen/_15sdp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_genere"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:background="@drawable/shape_chat_msg"
                        android:text="Select Genre"

                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textSize="@dimen/_15sdp" />


                </LinearLayout>


                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="#FC7C44"
                    android:padding="@dimen/_10sdp"
                    android:text="Save"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_16sdp" />

                <Button
                    android:id="@+id/ad_band_members"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/shape_add_member"
                    android:padding="@dimen/_10sdp"
                    android:text="Add Band Members"
                    android:textAllCaps="false"
                    android:textColor="#FC7C44"
                    android:textSize="@dimen/_15sdp" />

            </LinearLayout>

        </RelativeLayout>


    </ScrollView>

</RelativeLayout>