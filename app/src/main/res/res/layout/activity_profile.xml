<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.musicseque.musicseque.Activities.Activity.Profile">

    <include
        android:id="@+id/toolbar"
        layout="@layout/top_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp">

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/talent_managers" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_toRightOf="@+id/img_profile"
            android:text="ROCK N ROSE  " />

        <TextView
            android:id="@+id/tv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@+id/img_profile"
            android:text="text one" />

        <TextView
            android:id="@+id/tv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_one"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@+id/img_profile"
            android:text="Text Second" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/img_profile"
            android:layout_margin="@dimen/_10sdp"

            android:background="#BDBDBD" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rel1"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp">

        <TextView
            android:id="@+id/tv_bookings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Booking"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_bookings"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Description"
            android:textSize="@dimen/_14sdp" />

        <EditText
            android:id="@+id/et_display_name"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/tv_desc"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="#BDBDBD" />


        <TextView
            android:id="@+id/tv_specials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_display_name"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Specials"
            android:textSize="@dimen/_14sdp" />

        <EditText
            android:id="@+id/et_special"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/tv_specials"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="#BDBDBD" />

        <TextView
            android:id="@+id/tv_contct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_special"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Contact"
            android:textSize="@dimen/_14sdp" />

        <EditText
            android:id="@+id/et_contact"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/tv_contct"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="#BDBDBD" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_contact"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#FC7C44"
            android:text="Request Booking"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="@dimen/_14sdp" />


    </RelativeLayout>

</RelativeLayout>
