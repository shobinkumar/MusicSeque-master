<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B171F">

    <include
        android:id="@+id/toolbar"
        layout="@layout/top_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/line11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_chat_msg"
        android:orientation="horizontal"
        android:weightSum="1">

        <com.musicseque.musicseque.Activities.Fonts.Noyhr
            android:id="@+id/tv_fraga"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@drawable/shape_add_member"
            android:gravity="center_horizontal"
            android:padding="@dimen/_10sdp"
            android:text="profile"
            android:textColor="#ffffff"
            android:textSize="@dimen/_20sdp" />

        <com.musicseque.musicseque.Activities.Fonts.Noyhr
            android:id="@+id/tv_fragb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center_horizontal"
            android:padding="@dimen/_10sdp"
            android:text="events"
            android:textColor="#ffffff"
            android:textSize="@dimen/_20sdp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line11">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_10sdp">


            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_15sdp">

                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/profile2" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_profile"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_18sdp"
                    android:visibility="gone" />

                <!--    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text1"
                        android:layout_toRightOf="@+id/img_profile"
                        android:text="Zander"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text2"
                        android:layout_toRightOf="@+id/img_profile"
                        android:text="Zander"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />-->
            </RelativeLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rel1"
                android:background="#BDBDBD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp"
                    android:weightSum="1">

                    <com.musicseque.musicseque.Activities.Fonts.Noyhr
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Display Name"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <com.musicseque.musicseque.Activities.Fonts.Noyhr
                        android:id="@+id/tv_display_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight=".6"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp"
                    android:weightSum="1">

                    <com.musicseque.musicseque.Activities.Fonts.Noyhr
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="First name"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <com.musicseque.musicseque.Activities.Fonts.Noyhr
                        android:id="@+id/tv_first_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight=".6"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp"

                    android:weightSum="1">

                    <com.musicseque.musicseque.Activities.Fonts.Noyhr
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Last Name"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <com.musicseque.musicseque.Activities.Fonts.Noyhr
                        android:id="@+id/tv_lst_name"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight=".6"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp"

                    android:weightSum="1">

                    <com.musicseque.musicseque.Activities.Fonts.Noyhr
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Email"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <com.musicseque.musicseque.Activities.Fonts.Noyhr
                        android:id="@+id/tv_email"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight=".6"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp"

                    android:weightSum="1">

                    <com.musicseque.musicseque.Activities.Fonts.Noyhr
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Contact"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <com.musicseque.musicseque.Activities.Fonts.Noyhr
                        android:id="@+id/tv_contact"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight=".6"
                        android:maxLength="10"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp"

                    android:weightSum="1">

                    <com.musicseque.musicseque.Activities.Fonts.Noyhr
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="City"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <com.musicseque.musicseque.Activities.Fonts.Noyhr
                        android:id="@+id/tv_city"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight=".6"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp"

                    android:weightSum="1">

                    <com.musicseque.musicseque.Activities.Fonts.Noyhr
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="PostCode"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <com.musicseque.musicseque.Activities.Fonts.Noyhr
                        android:id="@+id/tv_postCode"
                        android:layout_width="0dp"

                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight=".6"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:padding="@dimen/_10sdp"
                    android:weightSum="1">

                    <com.musicseque.musicseque.Activities.Fonts.Noyhr

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Country"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <com.musicseque.musicseque.Activities.Fonts.Noyhr
                        android:id="@+id/tv_country"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight=".6"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:padding="@dimen/_10sdp"
                    android:weightSum="1">

                    <com.musicseque.musicseque.Activities.Fonts.Noyhr
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Website"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <com.musicseque.musicseque.Activities.Fonts.Noyhr
                        android:id="@+id/website_"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight=".6"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:padding="@dimen/_10sdp"
                    android:weightSum="1">

                    <com.musicseque.musicseque.Activities.Fonts.Noyhr
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Bio   "
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <com.musicseque.musicseque.Activities.Fonts.Noyhr
                        android:id="@+id/tv_bio"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"

                        android:layout_weight=".6"
                        android:maxLines="10"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l_genre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:padding="@dimen/_10sdp"
                    android:weightSum="1">

                    <com.musicseque.musicseque.Activities.Fonts.Noyhr
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Genre   "
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <com.musicseque.musicseque.Activities.Fonts.Noyhr
                        android:id="@+id/tv_Genre"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight=".6"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l_artist_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp"
                    android:weightSum="1">

                    <com.musicseque.musicseque.Activities.Fonts.Noyhr
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="Artist Type"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />

                    <com.musicseque.musicseque.Activities.Fonts.Noyhr
                        android:id="@+id/tv_artist_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight=".6"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:padding="@dimen/_10sdp"
                    android:src="@android:drawable/ic_dialog_email"
                    android:visibility="gone"
                    app:elevation="6dp"
                    app:pressedTranslationZ="12dp" />

            </LinearLayout>

        </RelativeLayout>


    </ScrollView>

</RelativeLayout>
