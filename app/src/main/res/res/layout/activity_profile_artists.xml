<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#04141C"
    tools:context="com.musicseque.musicseque.Activities.Activity.ProfileArtists">

    <include
        android:id="@+id/toolbar"
        layout="@layout/top_toolbar" />

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/_30sdp"
            android:src="@drawable/search" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ZANDER"
                android:textColor="#ffffff"
                android:textSize="@dimen/_18sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Singer, Guitar"
                android:textColor="#ffffff"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Santa, Monica"
                android:textColor="#ffffff"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=".2 Miles  "
                android:textColor="#ffffff"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:padding="@dimen/_20sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/search" />
        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/line2"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="#BDBDBD" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel1"
        android:text="Featured Music"
        android:textColor="#ffffff"
        android:textSize="@dimen/_15sdp" />

    <RelativeLayout
        android:id="@+id/rel_music"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text1">


        <TextView
            android:id="@+id/ss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:text="Music player"
            android:textColor="#ffffff"
            android:textSize="@dimen/_22sdp" />
    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/tv_musiclist"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/rel_music" />


    <RelativeLayout
        android:id="@+id/rel_youtu"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_musiclist">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/search" />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/img2"
            android:src="@drawable/search" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@+id/img2"
            android:src="@drawable/search" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_youtu"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bio"
            android:textColor="#ffffff"
            android:textSize="@dimen/_15sdp" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#0C1C24"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skills"
            android:textColor="#ffffff"
            android:textSize="@dimen/_15sdp" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#0C1C24"
            android:textSize="@dimen/_15sdp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Collaborators"
            android:textSize="@dimen/_15sdp" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#0C1C24"
            android:textSize="@dimen/_15sdp" />

    </LinearLayout>
</RelativeLayout>
