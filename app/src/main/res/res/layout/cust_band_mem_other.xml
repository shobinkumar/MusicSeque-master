<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#04141C">

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profilepic" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@+id/img_profile"
            android:text="ROCK N ROSE"
            android:textColor="#fc7c44"
            android:textSize="@dimen/_16sdp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#fc7c44"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tv_miles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@+id/img_profile"
            android:text="Steely Dan Cover"
            android:textColor="#ffffff"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/tv_milesdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_miles"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@+id/img_profile"
            android:text="12 March, 2018"
            android:textColor="#ffffff"
            android:textSize="@dimen/_14sdp" />

        d

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rel1"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="#757575" />


</RelativeLayout>