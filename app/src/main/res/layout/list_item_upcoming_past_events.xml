<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivEventImageUpcomingPast"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/icon_img_dummy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.musicseque.Fonts.Noyhr
        android:id="@+id/tvEventDayUpcomingPast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="17"
        android:textColor="@color/color_white"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/ivEventImageUpcomingPast"
        app:layout_constraintTop_toTopOf="parent" />

    <com.musicseque.Fonts.Noyhr
        android:id="@+id/tvEventDayWeekUpcomingPast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="MON"
        android:textColor="@color/color_white"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/ivEventImageUpcomingPast"
        app:layout_constraintTop_toBottomOf="@+id/tvEventDayUpcomingPast" />

    <com.musicseque.Fonts.Noyhr
        android:id="@+id/tvEventNameUpcomingPast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Warped Tour"
        android:textColor="@color/color_orange"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tvEventDayWeekUpcomingPast"
        app:layout_constraintTop_toTopOf="parent" />

    <com.musicseque.Fonts.Noyhr
        android:id="@+id/textTimeUpcomingPast"
        android:layout_width="28dp"
        android:layout_height="15dp"
        android:layout_marginTop="15dp"
        android:text="Time"
        android:textColor="@color/color_white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tvEventNameUpcomingPast"
        app:layout_constraintTop_toBottomOf="@+id/tvEventNameUpcomingPast" />

    <com.musicseque.Fonts.Noyhr
        android:id="@+id/textArtistUpcomingPast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Artist"
        android:textColor="@color/color_white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textTimeUpcomingPast"
        app:layout_constraintTop_toBottomOf="@+id/textTimeUpcomingPast" />

    <com.musicseque.Fonts.Noyhr
        android:id="@+id/textVenueUpcomingPast"
        android:layout_width="40dp"
        android:layout_height="11dp"
        android:layout_marginTop="10dp"
        android:text="Venue"
        android:textColor="@color/color_white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textArtistUpcomingPast"
        app:layout_constraintTop_toBottomOf="@+id/textArtistUpcomingPast" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="textArtistUpcomingPast,textTimeUpcomingPast,textVenueUpcomingPast"
        tools:layout_editor_absoluteX="411dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="179dp" />

    <com.musicseque.Fonts.Noyhr
        android:id="@+id/tvTimeUpcomingPast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="19:00 t0 23:00"
        android:textColor="@color/color_white"
        android:textSize="14sp"

        app:layout_constraintBaseline_toBaselineOf="@+id/textTimeUpcomingPast"
        app:layout_constraintStart_toStartOf="@+id/guideline4" />

    <com.musicseque.Fonts.Noyhr
        android:id="@+id/tvArtistUpcomingPast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Not selected"
        android:textColor="@color/color_white"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textArtistUpcomingPast"
        app:layout_constraintStart_toStartOf="@+id/guideline4" />

    <com.musicseque.Fonts.Noyhr
        android:id="@+id/tvVenueUpcomingPast"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:text="Not selected"
        android:textColor="@color/color_white"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textVenueUpcomingPast"
        app:layout_constraintStart_toStartOf="@+id/guideline4" />


  </android.support.constraint.ConstraintLayout>