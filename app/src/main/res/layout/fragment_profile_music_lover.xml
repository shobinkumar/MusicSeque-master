<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B171F">


    <com.musicseque.utilities.VerticalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingBottom="@dimen/_15sdp">

                <RelativeLayout
                    android:id="@+id/rlImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivProfileMusicLover"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/icon_img_dummy" />

                    <ProgressBar
                        android:id="@+id/pBarMusicLover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />

                    <ImageView
                        android:id="@+id/ivAddImageMusicLover"
                        android:layout_width="100dp"
                        android:layout_height="100dp"

                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/ivCameraMusicLover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/icon_camera" />

                    <ImageView
                        android:id="@+id/ivStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/circle_green"
                        android:visibility="invisible" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/rlImage"
                    android:orientation="vertical">

                    <com.musicseque.Fonts.Noyhr
                        android:id="@+id/tvUserNameMusicLover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_16sdp" />

                    <com.musicseque.Fonts.Noyhr
                        android:id="@+id/tvProfileTypeMusicLover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/color_orange"
                        android:textSize="@dimen/_15sdp" />

                    <com.musicseque.Fonts.Noyhr
                        android:id="@+id/tvCityCountryMusicLover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_13sdp" />


                </LinearLayout>

            </RelativeLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rel1"
                android:background="#BDBDBD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:weightSum="1">

                    <com.musicseque.Fonts.Noyhr
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".30"
                        android:text="@string/str_email"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_15sdp" />

                    <com.musicseque.Fonts.NoyhrEditText
                        android:id="@+id/etEmailMusicLover"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".70"
                        android:background="#0C1C24"
                        android:enabled="false"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:singleLine="true"
                        android:textAllCaps="false"
                        android:textColor="@color/color_white"
                        android:textColorHint="@color/color_white"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"

                    android:weightSum="1">

                    <com.musicseque.Fonts.Noyhr
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".30"
                        android:text="Mobile *"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_15sdp" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight=".30"
                        android:background="@android:color/transparent">

                        <com.musicseque.Fonts.Noyhr
                            android:id="@+id/tvCountryCodeMusicLover"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#0C1C24"
                            android:hint="Code"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:textColor="@color/color_white"
                            android:textColorHint="@color/color_white_hint"
                            android:textSize="@dimen/_15sdp"

                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/arrowdown" />
                    </RelativeLayout>

                    <com.musicseque.Fonts.NoyhrEditText
                        android:id="@+id/etMobileNumberMusicLover"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight=".40"
                        android:background="#0C1C24"
                        android:hint="@string/str_enter_contact"
                        android:inputType="number"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:padding="@dimen/_5sdp"
                        android:singleLine="true"
                        android:textColor="@color/color_white"
                        android:textColorHint="@color/color_white_hint"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"

                    android:weightSum="1">

                    <com.musicseque.Fonts.Noyhr
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".30"
                        android:text="@string/str_city"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_15sdp" />

                    <com.musicseque.Fonts.NoyhrEditText
                        android:id="@+id/etCityMusicLover"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".70"
                        android:background="#0C1C24"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:hint="Please enter the city"
                        android:maxLength="12"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:singleLine="true"
                        android:textColor="@color/color_white"
                        android:textColorHint="@color/color_white_hint"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:padding="@dimen/_5sdp"
                    android:weightSum="1">

                    <com.musicseque.Fonts.Noyhr
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".30"
                        android:text="@string/str_post_code"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_15sdp" />

                    <com.musicseque.Fonts.NoyhrEditText
                        android:id="@+id/etPostalCodeMusicLover"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".70"
                        android:background="#0C1C24"
                        android:hint="Please enter the post code"
                        android:maxLength="10"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:textColor="@color/color_white"
                        android:textColorHint="@color/color_white_hint"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:weightSum="1">

                    <com.musicseque.Fonts.Noyhr
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".30"
                        android:text="@string/str_country"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_15sdp" />


                    <com.musicseque.Fonts.Noyhr
                        android:id="@+id/tvCountryMusicLover"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".70"
                        android:background="#0C1C24"
                        android:hint="Please enter the country"
                        android:inputType="number"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:textColor="@color/color_white"
                        android:textColorHint="@color/color_white_hint"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:weightSum="1">

                    <com.musicseque.Fonts.Noyhr
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".30"
                        android:text="@string/str_bio"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_15sdp" />

                    <com.musicseque.Fonts.NoyhrEditText
                        android:id="@+id/etDescMusicLover"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".70"
                        android:background="#0C1C24"
                        android:hint="Enter your bio here..."
                        android:maxLength="500"
                        android:maxLines="7"
                        android:minLines="7"
                        android:overScrollMode="always"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:textColor="@color/color_white"
                        android:textColorHint="@color/color_white_hint"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <com.musicseque.Fonts.Noyhr
                    android:id="@+id/tvCountMusicLover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="0/500"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_15sdp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:weightSum="1">

                    <com.musicseque.Fonts.Noyhr
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".30"
                        android:text="@string/txt_website"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_15sdp" />


                    <com.musicseque.Fonts.NoyhrEditText
                        android:id="@+id/etWebsiteMusicLover"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".70"
                        android:background="#0C1C24"
                        android:hint="Enter website here.."
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:textColor="@color/color_white"
                        android:textColorHint="@color/color_white_hint"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>


                <com.musicseque.Fonts.CustomButton
                    android:id="@+id/btnSubmitMusicLover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="#FC7C44"
                    android:paddingLeft="30dp"
                    android:paddingTop="10dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="10dp"
                    android:text="@string/txt_save"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>

        </RelativeLayout>


    </com.musicseque.utilities.VerticalScrollView>

</RelativeLayout>