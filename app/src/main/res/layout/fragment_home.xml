<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B171F">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/rl"
            android:layout_marginTop="@dimen/_6sdp"

            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/img_artist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="#0C1C24"

                android:src="@drawable/artist1" />

            <ImageView
                android:id="@+id/img_talent_manager"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="#0C1C24"


                android:src="@drawable/talent_managers1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/line1"
            android:layout_marginTop="@dimen/_6sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/img_event_manger"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_3sdp"

                android:layout_weight="1"
                android:background="#0C1C24"

                android:src="@drawable/event_managers1" />

            <ImageView

                android:id="@+id/img_venue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight="1"


                android:background="#0C1C24"

                android:src="@drawable/venue1" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/line2"

            android:layout_marginTop="@dimen/_6sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="#0C1C24"


                android:src="@drawable/store1" />

            <ImageView
                android:id="@+id/img_gigs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="#0C1C24"


                android:src="@drawable/gigs1" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/txt_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="Location : Camden Town. UK"
                android:textColor="#ffffff"
                android:textSize="@dimen/_15sdp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/edit" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel1"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="30dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp">

            <TextView
                android:id="@+id/et_explore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:hint="explore"
                android:textColorHint="#ffffff"
                android:textSize="@dimen/_18sdp" />

            <ImageView
                android:id="@+id/img_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/_2sdp"
                android:paddingLeft="5dp"
                android:src="@drawable/search" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/et_explore"
                android:layout_marginTop="5dp"
                android:background="#BDBDBD"></View>
        </RelativeLayout>
        -->
    </RelativeLayout>
</ScrollView>