<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:padding="10dp">


    <RelativeLayout
        android:id="@+id/rlInnerMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivBandImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@color/color_white" />

        <RelativeLayout
            android:id="@+id/rlInner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/ivBandImage">

            <com.musicseque.Fonts.Noyhr
                android:id="@+id/tvBandName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/color_orange"
                android:textSize="@dimen/_16sdp" />


            <com.musicseque.Fonts.Noyhr
                android:id="@+id/tvBandType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvBandName"
                android:layout_marginTop="3dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_14sdp" />
            <com.musicseque.Fonts.Noyhr
                android:id="@+id/tvCityCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvBandType"
                android:layout_marginTop="3dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_14sdp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/llMain"
        android:layout_marginTop="15dp"
        android:background="@color/color_white" />


</LinearLayout>


