            <View
                android:id="@+id/view2DetailEventManager"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/color_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvExperienceDetailEventManager" />

            <LinearLayout
                android:id="@+id/llBioDetailEventManager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2DetailEventManager">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.musicseque.Fonts.Noyhr
                        android:id="@+id/tvAboutUserDetailEventManager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:text="About Me"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/_16sdp" />

                    <ImageView
                        android:id="@+id/ivIconDropDetailEventManager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingStart="24dp"
                        android:paddingTop="24dp"

                        android:paddingEnd="24dp"
                        android:paddingBottom="24dp"
                        android:src="@drawable/icon_arrow_down"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/ivIconUpDetailEventManager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingStart="24dp"
                        android:paddingTop="24dp"
                        android:paddingEnd="24dp"
                        android:paddingBottom="24dp"
                        android:src="@drawable/icon_arrow_up"
                        android:visibility="gone" />

                </RelativeLayout>


                <View
                    android:id="@+id/view3DetailEventManager"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvAboutUserDetailEventManager" />

                <com.musicseque.Fonts.Noyhr
                    android:id="@+id/tvBioDetailEventManager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@color/color_black"
                    android:padding="16dp"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_16sdp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvAboutUserDetailEventManager" />

                <include
                    android:id="@+id/bottom_layoutDetailEventManager"
                    layout="@layout/bottom_bar_event_manager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvBioDetailEventManager" />

                <FrameLayout
                    android:id="@+id/frame_layoutDetailEventManager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:fitsSystemWindows="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bottom_layout" />

            </LinearLayout>
